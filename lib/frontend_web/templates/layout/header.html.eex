    <button type="button" class="mobile-show search-button">
    </button>
    <ul class="widgets inline mobile-hide">
      <li class="calendar">
        <p><span><%= calendar(@today.date) %></span>, <%= @today.name %> névnapja</p>
        <p class="event"><%= @today.holiday %></p>
      </li>
      <li class="divider"></li>
      <li class="weather" title="<%= @weather.description%>">
        <p><%= round(@weather.current_temperature) %>°C</p>
        <img src="images/weather/<%= @weather.icon %>.svg" alt="időjárás ikon" />
      </li>
      <li class="divider"></li>
      <li class="rates" title="MNB középárfolyam - napiarfolyam.hu">
        <p>
          <%= for rate <- @rates do %>
            <%= rate.currency %> <%= rate.value %>
            <br/>
          <% end %>
        </p>
      </li>
    </ul>
  </div>
  <div class="sub-header inline">
    <div class="inline">
      <button class="aside-toggle" type="button">
        Hírek forrásai 
        <svg width="13" height="8" viewBox="0 0 13 8" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path fill-rule="evenodd" clip-rule="evenodd" d="M2.31092 0.492081L6.96631 5.23738L11.6217 0.492081L12.9663 1.86266L6.96631 7.97854L0.966309 1.86266L2.31092 0.492081Z" fill="white"/>
        </svg>
</button>
      <ul class="categories inline">
        <% for category <- @categories do %>
          <li class="category checkbox-button">
            <input type="checkbox" value="<%= category.id %>" name="category" id="category-<%= category.id %>" checked="true">
            <label for="category-<%= category.id %>"><%= category.name %></label>
          </li>
        <% end %>
      </ul>
    </div>
    <%# <div>
      <form class="search-form">
        <input type="search" placeholder="Milyen hír érdekel?">
        <button type="button">keresés</button>
      </form>
    </div> %>
  </div>
</header>